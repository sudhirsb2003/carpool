    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>
    <script type="text/javascript">

    $(document).ready(function(){
    	
    	$("#bloc").change(function() {
    	
    	if ($("#bloc").val() == 'Vehicle Owner')
    	{
    		$(".larger").show();
    	}
    	else
    	{      
    		$(".larger").hide();
    	}
    	
    	});
    	
    	$("#bloc").change();
    	
    });
     </script>


