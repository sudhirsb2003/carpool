    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js"></script>
    <script type="text/javascript">

    $(document).ready(function(){
    	
    	$("#bloc").change(function() {
    	
    	if ($("#bloc").val() == 'Vehicle Owner')
    	{
    		$(".larger").show();
    	}
    	else
    	{      
    		$(".larger").hide();
    	}
    	
    	});
    	
    	$("#bloc").change();
    	
    });
     </script>

<%= form_for @profile  , :html => { :multipart => true } do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <% if current_user.role=="Lift_Provider" %>
        <strong style="padding:5px;background:yellow"> i am a carpooler </strong>
      <% else %>
        <strong style="padding:5px;background:yellow"> i am a carseeker </strong>           
      <% end %>

    	<div class="larger">
	  <div class="field">
	    <%= f.label :Vehicle_type %><br>
	    <%= f.collection_select :vehicle_type, Profile::VEHICLE_TYPE, :to_s, :humanize %>
	  </div>

	  <div class="field">
	    <%= f.label :Accomodation_for %><br>
	    <%= f.select :accomodation_for, ((0..500).map {|i| [i,i] } << ["No limit",nil]) %>
	  </div>
    	</div>
 




  <div class="field">
    <%= f.label :upload_image %><br>	
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id, :value=>current_user.id %>
  </div>
  <div class="field">
    <%= f.label :fisrt_name %><br />
    <%= f.text_field :fisrt_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :job_title %><br />
    <%= f.text_field :job_title %>
  </div>
  <div class="field">
    <%= f.label :source_location %><br />
    <%= f.text_field :source_location %>
  </div>
  <div class="field">
    <%= f.label :destination_location %><br />
    <%= f.text_field :destination_location %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
